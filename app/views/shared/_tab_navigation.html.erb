<div class="border-b border-gray-200 mb-6">
  <nav class="-mb-px flex space-x-8" role="tablist" aria-label="Main tabs">
    <!-- Comparisons Tab -->
    <button
      data-tabs-target="tab"
      data-tab="comparisons"
      data-action="click->tabs#switch"
      class="
        whitespace-nowrap border-b-2 py-4 px-1 text-base font-medium transition-colors
        border-blue-600 text-blue-600
      "
      role="tab"
      aria-selected="true"
      aria-controls="comparisons-panel"
    >
      <%= heroicon "magnifying-glass", variant: :outline, options: { class: "w-5 h-5 inline-block mr-2 -mt-1" } %>
      Comparisons
      <% if defined?(@comparisons_count) %>
        <span class="ml-2 py-0.5 px-2 rounded-full text-xs font-semibold bg-blue-100 text-blue-700">
          <%= @comparisons_count %>
        </span>
      <% end %>
    </button>

    <!-- Analyses Tab -->
    <button
      data-tabs-target="tab"
      data-tab="analyses"
      data-action="click->tabs#switch"
      class="
        whitespace-nowrap border-b-2 py-4 px-1 text-base font-medium transition-colors
        text-gray-600 border-transparent hover:text-gray-900 hover:border-gray-300
      "
      role="tab"
      aria-selected="false"
      aria-controls="analyses-panel"
    >
      <%= heroicon "document-text", variant: :outline, options: { class: "w-5 h-5 inline-block mr-2 -mt-1" } %>
      Analyses
      <% if defined?(@repositories_count) %>
        <span class="ml-2 py-0.5 px-2 rounded-full text-xs font-semibold bg-gray-100 text-gray-700">
          <%= @repositories_count %>
        </span>
      <% end %>
    </button>
  </nav>
</div>
