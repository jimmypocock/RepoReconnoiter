<%# Search Form Partial - Used in navigation for both mobile and desktop %>
<%# Parameters:
  - input_classes: CSS classes for the text input field
  - container_classes: CSS classes for the form container (optional) %>
  <%= form_with url: comparisons_path, method: :post, class: container_classes, data: { turbo_stream: true } do |f| %>
    <div class="relative">
      <%= f.text_field :query,
                   placeholder: "What library or tool are you looking for?",
                   class: input_classes,
                   maxlength: 500,
                   data: {
                     search_sync_target: "input",
                     action: "input->search-sync#sync",
                   } %>
      <button
        type="submit"
        class="
          absolute right-2 top-1/2 -translate-y-1/2 p-2 text-gray-500 hover:text-blue-600 transition cursor-pointer
        "
      >
        <%= heroicon "magnifying-glass", variant: :outline, options: { class: "w-5 h-5" } %>
      </button>
    </div>
  <% end %>
