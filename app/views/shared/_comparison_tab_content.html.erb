<div
  data-tabs-target="panel"
  data-tab="comparisons"
  id="comparisons-panel"
  role="tabpanel"
  aria-labelledby="comparisons-tab"
>
  <!-- Search Bar (for authenticated users) -->
  <% if user_signed_in? %>
    <div class="mb-6 bg-white rounded-lg shadow-sm border border-gray-200 p-4">
      <%= render "shared/search_form",
        container_classes: "w-full",
        input_classes: "w-full px-4 py-3 pr-12 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  <% end %>

  <!-- Filter Bar -->
  <div class="mb-6 bg-white rounded-lg shadow-sm border border-gray-200 p-4">
    <%= form_with url: root_path, method: :get, class: "flex flex-wrap gap-3 items-center" do |f| %>
      <%= f.hidden_field :tab, value: "comparisons" %>

      <!-- Search -->
      <div class="flex-1 min-w-64">
        <%= f.text_field :search,
          value: params[:search],
          placeholder: "Search existing comparisons...",
          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <!-- Date Range -->
      <div>
        <%= f.select :date,
          options_for_select([["All Time", ""], ["This Week", "week"], ["This Month", "month"]], params[:date]),
          {},
          class: "px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <!-- Sort -->
      <div>
        <%= f.select :sort,
          options_for_select([%w[Newest newest], ["Most Popular", "popular"]], params[:sort]),
          {},
          class: "px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <%= f.submit "Apply Filters", class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-medium" %>

      <% if local_assigns[:presenter]&.has_filters? %>
        <%= link_to "Clear", root_path(tab: "comparisons"), class: "px-4 py-2 text-gray-600 hover:text-gray-900" %>
      <% end %>
    <% end %>
  </div>

  <!-- Comparisons List -->
  <% if local_assigns[:comparisons]&.any? %>
    <div id="comparisons_list" class="space-y-4">
      <% comparisons.each do |comparison| %>
        <%= render "comparisons/comparison_card", comparison: comparison %>
      <% end %>
    </div>

    <!-- Pagination Controls -->
    <% if local_assigns[:pagy] %>
      <div id="pagination_controls" class="mt-8" data-controller="infinite-scroll">
        <% if pagy.next %>
          <div data-infinite-scroll-target="trigger"></div>

          <div class="flex items-center justify-center gap-4">
            <% if pagy.previous %>
              <%= link_to "Previous Page",
                root_path(page: pagy.previous, search: params[:search], date: params[:date], sort: params[:sort], tab: "comparisons"),
                class: "inline-flex items-center justify-center gap-2 bg-gray-600 hover:bg-gray-700 text-white font-semibold py-3 px-8 rounded-xl transition-colors shadow-md hover:shadow-lg",
                data: { infinite_scroll_target: "previous" } %>
            <% end %>

            <%= link_to "Load More",
              root_path(page: pagy.next, search: params[:search], date: params[:date], sort: params[:sort], tab: "comparisons"),
              class: "inline-flex items-center justify-center gap-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-8 rounded-xl transition-colors shadow-md hover:shadow-lg",
              data: { turbo_stream: true, infinite_scroll_target: "load" } %>
          </div>
        <% elsif pagy.previous %>
          <div class="flex items-center justify-center gap-4">
            <%= link_to "Previous Page",
              root_path(page: pagy.previous, search: params[:search], date: params[:date], sort: params[:sort], tab: "comparisons"),
              class: "inline-flex items-center justify-center gap-2 bg-gray-600 hover:bg-gray-700 text-white font-semibold py-3 px-8 rounded-xl transition-colors shadow-md hover:shadow-lg",
              data: { infinite_scroll_target: "previous" } %>
          </div>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <!-- Empty State -->
    <% if local_assigns[:presenter]&.has_filters? %>
      <!-- No Results with Filters Applied -->
      <div class="bg-white rounded-xl shadow-sm p-12 text-center border-2 border-gray-200">
        <div class="text-gray-400 mb-4">
          <%= heroicon "magnifying-glass", variant: :outline, options: { class: "w-16 h-16 mx-auto" } %>
        </div>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">No comparisons found</h3>
        <p class="text-gray-600 mb-6">
          No comparisons match "<%= params[:search] %>" with current filters.
        </p>

        <div class="mb-6 text-left max-w-md mx-auto">
          <p class="text-sm font-medium text-gray-700 mb-2">Try:</p>
          <ul class="space-y-1 text-sm text-gray-600">
            <li class="flex items-start gap-2">
              <span class="text-blue-600 mt-0.5">•</span>
              <span>Adjusting your search terms</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-blue-600 mt-0.5">•</span>
              <span>Clearing filters to see all comparisons</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-blue-600 mt-0.5">•</span>
              <span>Creating a new comparison for your query</span>
            </li>
          </ul>
        </div>

        <div class="flex items-center justify-center gap-3">
          <%= link_to root_path(tab: "comparisons"),
            class: "inline-flex items-center gap-2 px-6 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition font-medium" do %>
            Clear Filters
          <% end %>

          <% if user_signed_in? %>
            <button
              data-action="click->quick-actions#openComparison"
              class="inline-flex items-center gap-2 px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition font-medium"
            >
              <%= heroicon "plus", variant: :outline, options: { class: "w-4 h-4" } %>
              New Comparison
            </button>
          <% end %>
        </div>
      </div>
    <% else %>
      <!-- No Comparisons Exist -->
      <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl shadow-sm p-12 text-center border-2 border-blue-200">
        <div class="text-blue-400 mb-4">
          <%= heroicon "sparkles", variant: :solid, options: { class: "w-16 h-16 mx-auto" } %>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-2">No comparisons yet!</h3>
        <p class="text-gray-700 mb-8 max-w-lg mx-auto">
          Create your first comparison to see AI-powered insights on the best open source tools for your needs.
        </p>

        <div class="mb-8 text-left max-w-md mx-auto bg-white rounded-lg p-6 shadow-sm">
          <p class="text-sm font-semibold text-gray-900 mb-3">
            <%= heroicon "light-bulb", variant: :solid, options: { class: "w-4 h-4 inline-block text-yellow-500 mr-1" } %>
            Try searching for:
          </p>
          <div class="space-y-2">
            <% example_queries = [
              "Rails authentication library",
              "Python web framework for APIs",
              "Node.js testing framework",
              "Ruby background job processor"
            ] %>
            <% example_queries.each do |query| %>
              <%= link_to comparisons_path(query: query),
                method: :post,
                class: "block px-4 py-2 text-sm text-blue-600 hover:bg-blue-50 rounded-lg transition text-left" do %>
                <span class="font-medium">"<%= query %>"</span>
                <%= heroicon "arrow-right", variant: :outline, options: { class: "w-4 h-4 inline-block ml-1" } %>
              <% end %>
            <% end %>
          </div>
        </div>

        <% if user_signed_in? %>
          <button
            data-action="click->quick-actions#openComparison"
            class="inline-flex items-center gap-2 px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition font-semibold shadow-lg hover:shadow-xl"
          >
            <%= heroicon "magnifying-glass", variant: :outline, options: { class: "w-5 h-5" } %>
            Create Your First Comparison
          </button>
        <% else %>
          <%= button_to user_github_omniauth_authorize_path,
            method: :post,
            class: "inline-flex items-center gap-2 px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition font-semibold shadow-lg hover:shadow-xl",
            form: { data: { turbo: false } } do %>
            Sign In to Create Comparisons
          <% end %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
