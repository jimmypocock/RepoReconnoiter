<% if user_signed_in? %>
  <!-- Full-width gradient background that breaks out of container -->
  <div
    data-controller="hero"
    class="bg-gradient-to-br from-blue-50 via-purple-50 to-indigo-50 py-12 mb-8"
    style="margin-left: calc(-50vw + 50%); margin-right: calc(-50vw + 50%); padding-left: calc(50vw - 50%); padding-right: calc(50vw - 50%);"
  >
    <!-- Contained content inside full-width background -->
    <div class="max-w-6xl mx-auto">
      <!-- Heading -->
      <div class="text-center mb-8">
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-3">
          <%= heroicon "sparkles", variant: :solid, options: { class: "w-8 h-8 inline-block text-blue-600 mb-1" } %>
          AI-Powered Open Source Intelligence
        </h1>
        <p class="text-lg text-gray-700 max-w-3xl mx-auto">
          Discover, analyze, and compare GitHub repositories to make better tech stack decisions.
        </p>
      </div>

      <!-- Dual CTA Cards -->
      <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
      <!-- Compare Libraries Card -->
      <button
        data-action="click->hero#ctaClick click->quick-actions#openComparison"
        data-action-param="compare_libraries"
        class="group bg-white rounded-lg shadow-md border-2 border-blue-200 p-6 text-left hover:shadow-xl hover:border-blue-400 transition-all"
      >
        <div class="flex items-center gap-3 mb-3">
          <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center flex-shrink-0">
            <%= heroicon "magnifying-glass", variant: :outline, options: { class: "w-7 h-7 text-white" } %>
          </div>
          <h2 class="text-xl font-bold text-gray-900">Compare Libraries</h2>
        </div>
        <p class="text-gray-700 mb-4">
          Find the best open source tools for your specific needs
        </p>
        <div class="flex items-center text-blue-600 font-semibold group-hover:gap-3 gap-2 transition-all">
          <span>Compare Tools</span>
          <%= heroicon "arrow-right", variant: :outline, options: { class: "w-5 h-5" } %>
        </div>
      </button>

      <!-- Analyze Repository Card -->
      <button
        data-action="click->hero#ctaClick click->quick-actions#openAnalysis"
        data-action-param="analyze_repository"
        class="group bg-white rounded-lg shadow-md border-2 border-purple-200 p-6 text-left hover:shadow-xl hover:border-purple-400 transition-all"
      >
        <div class="flex items-center gap-3 mb-3">
          <div class="w-12 h-12 bg-purple-600 rounded-lg flex items-center justify-center flex-shrink-0">
            <%= heroicon "document-text", variant: :outline, options: { class: "w-7 h-7 text-white" } %>
          </div>
          <h2 class="text-xl font-bold text-gray-900">Analyze Repository</h2>
        </div>
        <p class="text-gray-700 mb-4">
          Deep dive into any GitHub repo with AI-powered insights
        </p>
        <div class="flex items-center text-purple-600 font-semibold group-hover:gap-3 gap-2 transition-all">
          <span>Analyze Repo</span>
          <%= heroicon "arrow-right", variant: :outline, options: { class: "w-5 h-5" } %>
        </div>
      </button>
      </div>
    </div>
  </div>
<% end %>
