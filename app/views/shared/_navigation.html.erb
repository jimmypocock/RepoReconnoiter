<nav class="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-50" data-controller="navbar" data-navbar-target="nav">
  <div class="container mx-auto px-4">
    <!-- Top Row: Logo and User Controls -->
    <div class="flex items-center justify-between h-16" data-navbar-target="topRow">
      <!-- Left: Logo & Brand (hidden on mobile when signed in) -->
      <%= link_to root_path, class: "flex items-center gap-3 hover:opacity-80 transition flex-shrink-0 #{user_signed_in? ? 'hidden md:flex' : ''}" do %>
        <%= image_tag "/icon.png", alt: "Repo Reconnoiter", class: "w-8 h-8" %>
        <span class="text-xl font-bold text-gray-900">Repo Reconnoiter</span>
      <% end %>

      <!-- Center: Inline Search (shown on mobile by default, hidden on desktop until scrolled) or Waitlist Link -->
      <% if user_signed_in? %>
        <div class="flex-1 flex justify-center px-2 md:px-8 md:hidden transition-all duration-300" data-navbar-target="searchInline">
          <%= form_with url: comparisons_path, method: :post, class: "w-full max-w-2xl" do |f| %>
            <div class="relative">
              <%= f.text_field :query,
                  placeholder: "What library or tool are you looking for?",
                  class: "w-full px-4 py-2 pr-12 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200",
                  maxlength: 500 %>
              <button type="submit" class="absolute right-2 top-1/2 -translate-y-1/2 p-2 text-gray-500 hover:text-blue-600 transition cursor-pointer">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
              </button>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="flex-1 flex justify-center px-8">
          <%= link_to "Want to use AI to search repositories? Join the Waitlist",
              "mailto:jimmycpocock+RepoReconnoiter@gmail.com?subject=I'd like to try Repo Reconnoiter!&body=Hi,%0D%0A%0D%0AI'd like to get access to Repo Reconnoiter.%0D%0A%0D%0AMy GitHub username is: [your_github_username]%0D%0A%0D%0AThanks!",
              class: "text-md font-medium text-gray-700 hover:text-gray-900 transition" %>
        </div>
      <% end %>

      <!-- Right: Sign In Button or User Menu -->
      <div class="flex items-center gap-6 flex-shrink-0">
        <% if user_signed_in? %>
          <!-- User Menu -->
          <div class="relative" data-controller="dropdown">
            <div class="flex items-center gap-2">
              <% if current_user.github_avatar_url.present? %>
                <%= image_tag current_user.github_avatar_url, class: "w-10 h-10 rounded-full", alt: current_user.github_username %>
              <% end %>
              <button
                type="button"
                data-action="click->dropdown#toggle"
                class="
                  w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center hover:bg-gray-300 transition cursor-pointer
                "
              >
                <svg class="w-4 h-4 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
              </button>
            </div>
            <div
              data-dropdown-target="menu"
              class="hidden absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 py-1 z-50"
            >
              <% if current_user.admin? %>
                <%= link_to "Admin Stats", admin_stats_path, target: "_blank", class: "block px-4 py-2 text-gray-700 hover:bg-gray-50" %>
                <%= link_to "Job Dashboard",
                mission_control_jobs_path,
                target: "_blank",
                class: "block px-4 py-2 text-gray-700 hover:bg-gray-50" %>
                <div class="border-t border-gray-200 my-1"></div>
              <% end %>
              <%= button_to "Sign Out",
              destroy_user_session_path,
              method: :delete,
              class: "block w-full text-left px-4 py-2 text-gray-700 hover:bg-gray-50" %>
            </div>
          </div>
        <% else %>
          <!-- Sign In with GitHub Button -->
          <%= button_to user_github_omniauth_authorize_path,
              method: :post,
              class: "inline-flex items-center gap-2 bg-gray-800 hover:bg-gray-900 text-white font-medium py-2 px-4 rounded-lg text-sm transition-colors cursor-pointer",
              form: { class: "inline-block", data: { turbo: false } } do %>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"
              />
            </svg>
            Sign in with GitHub
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Bottom Row: Search Bar (only when signed in, hidden on mobile, visible on desktop until scrolled) -->
    <% if user_signed_in? %>
      <div class="pb-4 transition-all duration-300 hidden md:block" data-navbar-target="searchSection">
        <div class="max-w-2xl mx-auto">
          <p class="text-sm text-gray-600 mb-2 text-center transition-all duration-300" data-navbar-target="tagline">Use AI to search the best open source library for your project</p>
          <%= form_with url: comparisons_path, method: :post, class: "w-full" do |f| %>
            <div class="relative">
              <%= f.text_field :query,
                  placeholder: "What library or tool are you looking for?",
                  class: "w-full px-4 py-3 pr-12 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200",
                  maxlength: 500 %>
              <button type="submit" class="absolute right-2 top-1/2 -translate-y-1/2 p-2 text-gray-500 hover:text-blue-600 transition cursor-pointer">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
              </button>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</nav>
