<%
  # Stat card partial for admin statistics
  # Usage: render "stat_card", title: "...", value: "...", icon_color: "blue", icon: "folder"
  #
  # Required locals:
  #   - title: String (e.g., "Repositories Indexed")
  #   - value: String (pre-formatted value to display)
  #   - icon_color: String (tailwind color: blue, green, purple, orange, red)
  #   - icon: String (icon name: folder, clipboard, eye, dollar, chart)
%>
<div class="bg-white rounded-xl shadow-sm p-6 border border-gray-200">
  <div class="flex items-center justify-between mb-2">
    <h3 class="text-sm font-medium text-gray-600"><%= title %></h3>
    <%= render "stat_icon", icon: icon, color: icon_color %>
  </div>
  <p class="text-3xl font-bold text-gray-900"><%= value %></p>
</div>
