<%
  # Icon partial for stat cards
  # Renders a heroicon with the specified color
  #
  # Required locals:
  #   - icon: String (folder, clipboard, eye, dollar, chart)
  #   - color: String (blue, green, purple, orange, red)

  icon_map = {
    folder: "folder",
    clipboard: "clipboard-document",
    eye: "eye",
    dollar: "currency-dollar",
    chart: "chart-bar"
  }

  icon_name = icon_map[icon.to_sym] || icon
%>
<%= heroicon icon_name, variant: :outline, options: { class: "w-5 h-5 text-#{color}-500" } %>
