<%# Progress Modal - Real-time comparison creation progress %>
<div
  id="comparison-progress-modal"
  data-controller="comparison-progress"
  data-comparison-progress-session-id-value="<%= session_id %>"
  class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black bg-opacity-50 animate-fade-in"
>
  <div class="bg-white rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto animate-slide-up">
    <%# Header %>
    <div class="px-8 pt-8 pb-6 border-b border-gray-200">
      <h2 class="text-2xl font-bold text-gray-900">Creating Your Comparison</h2>
      <p class="mt-2 text-sm text-gray-600">
        Analyzing repositories and generating AI-powered insights...
      </p>
      <%= render "shared/progress_warning" %>
    </div>

    <%# Progress Content %>
    <div class="px-8 py-6">
      <%# Current Step Message %>
      <div class="mb-6">
        <p data-comparison-progress-target="currentMessage" class="text-lg font-semibold text-gray-900 min-h-[1.75rem]">
          Starting...
        </p>
      </div>

      <%# Progress Bar %>
      <div class="mb-8">
        <div class="flex items-center justify-between mb-2">
          <span class="text-sm font-medium text-gray-700">Progress</span>
          <span data-comparison-progress-target="percentage" class="text-sm font-medium text-blue-600">
            0%
          </span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden">
          <div
            data-comparison-progress-target="progressBar"
            class="h-full bg-blue-600 rounded-full transition-all duration-500 ease-out"
            style="width: 0%"
          ></div>
        </div>
      </div>

      <%# Step List %>
      <div data-comparison-progress-target="stepList" class="space-y-3">
        <%= render "comparisons/progress_step", step: "parsing_query", label: "Parse your query" %>
        <%= render "comparisons/progress_step", step: "searching_github", label: "Search GitHub" %>
        <%= render "comparisons/progress_step", step: "merging_results", label: "Merge and deduplicate results" %>
        <%= render "comparisons/progress_step", step: "analyzing_repositories", label: "Analyze repositories with AI" do %>
          <span data-comparison-progress-target="analyzeCount" class="ml-auto text-xs text-gray-500"></span>
        <% end %>
        <%= render "comparisons/progress_step", step: "comparing_repositories", label: "Compare repositories" %>
        <%= render "comparisons/progress_step", step: "saving_comparison", label: "Finalize comparison" %>
      </div>

      <%# Error State Container (Hidden by default) %>
      <div
        data-comparison-progress-target="errorContainer"
        class="hidden mt-6 p-4 bg-red-50 border border-red-200 rounded-lg"
      >
        <div class="flex items-start gap-3">
          <%= heroicon "x-circle", variant: :solid, options: { class: "w-5 h-5 text-red-600 mt-0.5 flex-shrink-0" } %>
          <div class="flex-1">
            <h3 class="text-sm font-semibold text-red-900">Error</h3>
            <p data-comparison-progress-target="errorMessage" class="mt-1 text-sm text-red-700">
              An error occurred during comparison creation.
            </p>
          </div>
        </div>
        <div class="mt-4 flex gap-3">
          <button
            data-comparison-progress-target="retryButton"
            data-action="click->comparison-progress#retry"
            class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-medium text-sm rounded-lg transition-colors"
          >
            Retry
          </button>
          <a
            href="<%= root_path %>"
            class="
              px-4 py-2 bg-white hover:bg-gray-50 text-gray-700 font-medium text-sm rounded-lg border border-gray-300
              transition-colors
            "
          >
            Go Back
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slide-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .animate-fade-in {
    animation: fade-in 0.2s ease-out;
  }

  .animate-slide-up {
    animation: slide-up 0.3s ease-out;
  }

  .animate-spin {
    animation: spin 1s linear infinite;
  }
</style>
