<!-- Trending Comparisons Section -->
<div class="mb-12">
  <h2 class="text-2xl font-bold text-gray-900 mb-6">Trending Comparisons</h2>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <!-- Most Helpful -->
    <% if @homepage.most_helpful_comparison %>
      <div class="bg-gradient-to-br from-yellow-50 to-orange-50 rounded-2xl shadow-lg border-2 border-yellow-300 p-6 hover:shadow-xl transition-all">
        <div class="flex items-center gap-2 mb-3">
          <span class="text-2xl">üèÜ</span>
          <h3 class="text-sm font-semibold text-yellow-800 uppercase tracking-wide">Most Helpful</h3>
        </div>

        <%= link_to comparison_path(@homepage.most_helpful_comparison), class: "block" do %>
          <p class="text-lg font-semibold text-gray-900 mb-2 line-clamp-2">
            <%= @homepage.most_helpful_comparison.user_query %>
          </p>

          <% if @homepage.most_helpful_comparison.recommended_repository %>
            <div class="mb-3 flex items-center gap-2">
              <span class="text-sm font-medium text-blue-600">
                <%= @homepage.most_helpful_comparison.recommended_repository.full_name %>
              </span>
            </div>
          <% end %>

          <div class="flex items-center gap-2 text-sm text-gray-600">
            <span class="font-bold text-yellow-700"><%= pluralize(@homepage.most_helpful_comparison.view_count, 'view') %></span>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Fresh Discovery -->
    <% if @homepage.newest_comparison %>
      <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-2xl shadow-lg border-2 border-green-300 p-6 hover:shadow-xl transition-all">
        <div class="flex items-center gap-2 mb-3">
          <span class="text-2xl">‚ú®</span>
          <h3 class="text-sm font-semibold text-green-800 uppercase tracking-wide">Fresh Discovery</h3>
        </div>

        <%= link_to comparison_path(@homepage.newest_comparison), class: "block" do %>
          <p class="text-lg font-semibold text-gray-900 mb-2 line-clamp-2">
            <%= @homepage.newest_comparison.user_query %>
          </p>

          <% if @homepage.newest_comparison.recommended_repository %>
            <div class="mb-3 flex items-center gap-2">
              <span class="text-sm font-medium text-blue-600">
                <%= @homepage.newest_comparison.recommended_repository.full_name %>
              </span>
            </div>
          <% end %>

          <div class="flex items-center gap-2 text-sm text-gray-600">
            <span class="font-bold text-green-700"><%= time_ago_in_words(@homepage.newest_comparison.created_at) %> ago</span>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Popular This Week -->
    <% if @homepage.popular_this_week %>
      <div class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-2xl shadow-lg border-2 border-purple-300 p-6 hover:shadow-xl transition-all">
        <div class="flex items-center gap-2 mb-3">
          <span class="text-2xl">üî•</span>
          <h3 class="text-sm font-semibold text-purple-800 uppercase tracking-wide">Popular This Week</h3>
        </div>

        <%= link_to comparison_path(@homepage.popular_this_week), class: "block" do %>
          <p class="text-lg font-semibold text-gray-900 mb-2 line-clamp-2">
            <%= @homepage.popular_this_week.user_query %>
          </p>

          <% if @homepage.popular_this_week.recommended_repository %>
            <div class="mb-3 flex items-center gap-2">
              <span class="text-sm font-medium text-blue-600">
                <%= @homepage.popular_this_week.recommended_repository.full_name %>
              </span>
            </div>
          <% end %>

          <div class="flex items-center gap-2 text-sm text-gray-600">
            <span class="font-bold text-purple-700"><%= pluralize(@homepage.popular_this_week.view_count, 'view') %></span>
            <span>‚Ä¢</span>
            <span><%= time_ago_in_words(@homepage.popular_this_week.created_at) %> ago</span>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
