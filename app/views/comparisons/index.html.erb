<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-50 px-4 py-8">
  <div class="w-full max-w-6xl mx-auto">
    <!-- Header Section -->
    <div class="text-center mb-12">
      <h1 class="text-5xl font-bold text-gray-900 mb-3">RepoReconnoiter</h1>
      <p class="text-xl text-gray-600">Find the perfect library for your project</p>
    </div>

    <!-- Auth/Search Section -->
    <div class="w-full max-w-3xl mx-auto mb-16">
      <% if user_signed_in? %>
        <%= render "search_section" %>
      <% else %>
        <%= render "auth_section" %>
      <% end %>
    </div>

    <!-- Comparisons List (visible to everyone) -->
    <%= render "comparisons_list" %>
  </div>
</div>
