<!-- Stats Bar -->
<div class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white py-4 mb-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid <%= current_user_admin? ? 'grid-cols-2 md:grid-cols-4' : 'grid-cols-1 md:grid-cols-2' %> gap-6 text-center">
      <!-- Repositories Indexed -->
      <div>
        <div class="text-3xl font-bold"><%= @homepage.stats[:repositories_count] %></div>
        <div class="text-sm text-blue-100">Repositories Indexed</div>
      </div>
      <!-- Comparisons Created -->
      <div>
        <div class="text-3xl font-bold"><%= @homepage.stats[:comparisons_count] %></div>
        <div class="text-sm text-blue-100">Comparisons Created</div>
      </div>

      <% if current_user_admin? %>
        <!-- Total Views (Admin Only) -->
        <div>
          <div class="text-3xl font-bold"><%= @homepage.stats[:total_views] %></div>
          <div class="text-sm text-blue-100">Total Views</div>
        </div>
        <!-- AI Cost Transparency (Admin Only) -->
        <div>
          <div class="text-3xl font-bold">$<%= sprintf("%.2f", @homepage.stats[:total_ai_cost]) %></div>
          <div class="text-sm text-blue-100">Total AI Spend</div>
        </div>
      <% end %>
    </div>
  </div>
</div>
