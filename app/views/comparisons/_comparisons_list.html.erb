<!-- Comparisons List with Infinite Scroll -->
<div class="mt-12">
  <h2 class="text-2xl font-bold text-gray-900 mb-6">Recent Comparisons</h2>

  <% if @comparisons.any? %>
    <!-- Turbo Frame for infinite scroll -->
    <%= turbo_frame_tag "comparisons_page_#{@pagy.page}", class: "contents" do %>
      <!-- Comparison Cards Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
        <% @comparisons.each do |comparison| %>
          <%= render "comparison_card", comparison: comparison %>
        <% end %>
      </div>

      <!-- Load More Button (Infinite Scroll) -->
      <% if @pagy.next %>
        <div class="text-center" data-controller="infinite-scroll">
          <%= link_to "Load More Comparisons",
                comparisons_path(page: @pagy.next),
                class: "inline-flex items-center justify-center gap-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-8 rounded-xl transition-colors",
                data: {
                  turbo_frame: "comparisons_page_#{@pagy.next}",
                  infinite_scroll_target: "link"
                } %>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-12 bg-white rounded-2xl shadow-lg border border-gray-200">
      <p class="text-gray-500 text-lg">
        No comparisons yet. <%= user_signed_in? ? "Try searching for a library above!" : "Sign in to start comparing libraries!" %>
      </p>
    </div>
  <% end %>
</div>
